<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Nama1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tampilnama"
        android:textSize="20dp"
        tools:ignore="ObsoleteLayoutParam,UnknownId" />

    <TextView
        android:layout_width="150dp"
        android:textSize="20dp"
        android:id="@+id/tampilnama"
        android:layout_height="48dp"
        android:text="Nama =  "
        />

    <TextView
        android:id="@+id/Umur1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nama1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="43dp"
        android:layout_toRightOf="@+id/tampilumur"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tampilumur"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Nama1"
        android:layout_marginTop="21dp"
        android:text="Umur = "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Umur1"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/tampilemail"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tampilemail"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Umur1"
        android:layout_marginTop="22dp"
        android:text="Email = "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Username1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/tampilusername"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tampilusername"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Email1"
        android:layout_marginTop="22dp"
        android:text="Username= "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/tampilpas"
        android:hint="****"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tampilpas"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Username1"
        android:layout_marginTop="2dp"
        android:text="Password = "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Jk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/tampiljk"
        android:hint="****"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tampiljk"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Password1"
        android:layout_marginTop="1dp"
        android:text="Password = "
        android:textSize="20dp" />


</RelativeLayout>
